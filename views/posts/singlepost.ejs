<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= post.title %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: #f4f6f9;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            padding: 1rem 0;
            box-shadow: 0 2px 20px rgba(0, 0, 0, 0.1);
        }

        .nav-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: #2c3e50;
            text-decoration: none;
        }

        .nav-links {
            display: flex;
            list-style: none;
            gap: 2rem;
        }

        .nav-links a {
            text-decoration: none;
            color: #2c3e50;
            font-weight: 500;
            transition: color 0.3s ease;
        }

        .nav-links a:hover {
            color: #3498db;
        }

        .post-container {
            max-width: 800px;
            margin: 120px auto 30px;
            padding: 2rem;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .post-container h1 {
            color: #2c3e50;
            margin-bottom: 1rem;
        }

        .post-meta {
            color: #777;
            font-size: 0.9rem;
            margin-bottom: 1.5rem;
        }

        .post-content {
            font-size: 1.1rem;
            line-height: 1.7;
            color: #333;
        }

        .back-link {
            display: block;
            margin-top: 2rem;
            text-decoration: none;
            color: #3498db;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .back-link:hover {
            color: #2980b9;
            text-decoration: underline;
        }

        .post-image {
            width: 100%;
            max-height: 400px;
            overflow: hidden;
            border-radius: 12px;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        .post-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            display: block;
            transition: transform 0.3s ease;
        }

        .post-image img:hover {
            transform: scale(1.05);
        }

        /* Like Button Styles */
        .like-section {
            max-width: 800px;
            margin: 20px auto;
            padding: 1.5rem 2rem;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .like-button {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: linear-gradient(135deg, #ff6b6b, #ee5a52);
            color: white;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 50px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(255, 107, 107, 0.3);
        }

        .like-button:hover {
            background: linear-gradient(135deg, #ee5a52, #c44569);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(255, 107, 107, 0.4);
        }

        .like-button.liked {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
            animation: likeAnimation 0.3s ease;
        }

        .like-button.liked .heart {
            animation: heartBeat 0.6s ease;
        }

        .like-button:disabled {
            background: #95a5a6;
            cursor: not-allowed;
            transform: none;
            box-shadow: 0 2px 10px rgba(149, 165, 166, 0.3);
        }

        .heart {
            font-size: 1.2rem;
            transition: transform 0.2s ease;
        }

        .like-count {
            font-size: 1.1rem;
            color: #2c3e50;
            font-weight: 600;
            margin-left: auto;
            background: linear-gradient(135deg, #f8f9fa, #e9ecef);
            padding: 0.5rem 1rem;
            border-radius: 25px;
            border: 2px solid #dee2e6;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .like-count-number {
            color: #e74c3c;
            font-weight: 700;
            font-size: 1.2rem;
        }

        .like-count-text {
            color: #6c757d;
        }

        .like-status {
            font-size: 0.9rem;
            color: #777;
            font-style: italic;
        }

        @keyframes likeAnimation {
            0% { transform: scale(1); }
            50% { transform: scale(1.1); }
            100% { transform: scale(1); }
        }

        @keyframes heartBeat {
            0%, 100% { transform: scale(1); }
            25% { transform: scale(1.2); }
            50% { transform: scale(1.1); }
            75% { transform: scale(1.15); }
        }

        /* Comment Section Styles */
        .comments-section {
            max-width: 800px;
            margin: 30px auto 50px;
            padding: 2rem;
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

        .comments-header {
            color: #2c3e50;
            margin-bottom: 1.5rem;
            font-size: 1.5rem;
            border-bottom: 2px solid #e9ecef;
            padding-bottom: 0.5rem;
        }

        .comment-form {
            margin-bottom: 2rem;
        }

        .comment-form textarea {
            width: 100%;
            min-height: 100px;
            padding: 1rem;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-family: inherit;
            font-size: 1rem;
            resize: vertical;
            transition: border-color 0.3s ease;
            box-sizing: border-box;
        }

        .comment-form textarea:focus {
            outline: none;
            border-color: #3498db;
        }

        .comment-submit-btn {
            background: linear-gradient(135deg, #3498db, #2980b9);
            color: white;
            border: none;
            padding: 0.8rem 2rem;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            margin-top: 1rem;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .comment-submit-btn:hover {
            background: linear-gradient(135deg, #2980b9, #1c598a);
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(52, 152, 219, 0.3);
        }

        .comment-submit-btn:disabled {
            background: #95a5a6;
            cursor: not-allowed;
            transform: none;
            box-shadow: none;
        }

        .comments-list {
            margin-top: 2rem;
        }

        .comment {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            border-left: 4px solid #3498db;
            transition: transform 0.2s ease;
        }

        .comment:hover {
            transform: translateX(5px);
        }

        .comment-author {
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 0.5rem;
            font-size: 1rem;
        }

        .comment-date {
            color: #777;
            font-size: 0.85rem;
            margin-bottom: 0.8rem;
        }

        .comment-content {
            color: #333;
            line-height: 1.6;
            font-size: 1rem;
        }

        .no-comments {
            text-align: center;
            color: #777;
            font-style: italic;
            padding: 2rem;
            background: #f8f9fa;
            border-radius: 8px;
        }

        .loading {
            text-align: center;
            color: #3498db;
            font-style: italic;
            padding: 1rem;
        }

        .error {
            background: #f8d7da;
            color: #721c24;
            padding: 1rem;
            border-radius: 8px;
            margin: 1rem 0;
            border: 1px solid #f5c6cb;
        }

        .success {
            background: #d4edda;
            color: #155724;
            padding: 1rem;
            border-radius: 8px;
            margin: 1rem 0;
            border: 1px solid #c3e6cb;
        }

        @media (max-width: 768px) {
            .post-container, .comments-section, .like-section {
                margin-left: 1rem;
                margin-right: 1rem;
                padding: 1rem;
            }

            .nav-container {
                padding: 0 1rem;
            }

            .nav-links {
                gap: 1rem;
            }

            .like-section {
                flex-direction: column;
                align-items: flex-start;
            }

            .like-count {
                margin-left: 0;
                margin-top: 0.5rem;
            }
        }
    </style>
</head>
<body>
<!-- Navbar -->
<nav class="navbar">
    <div class="nav-container">
        <a href="/" class="logo">InkSphere 🌊</a>
        <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/#blog">Blog</a></li>
            <li><a href="/posts/create">Post</a></li>
            <li><a href="#contact">Contact</a></li>
        </ul>
    </div>
</nav>

<!-- Post Content -->
<div class="post-container">
    <h1><%= post.title %></h1>
    <p class="post-meta">
        By <%= post.author?.fullName || "Unknown" %>
        on <%= post.createdAt.toDateString() %>
    </p>
    <% if (post.image) { %>
        <div class="post-image">
            <img src="<%= post.image %>" alt="<%= post.title %>" />
        </div>
    <% } %>

    <div class="post-content">
        <p><%= post.content %></p>
    </div>
    <a href="/" class="back-link">← Back to Home</a>
</div>

<!-- Like Section -->
<div class="like-section">
    <button id="likeButton" class="like-button" onclick="toggleLike()">
        <span class="heart">❤️</span>
        <span id="likeButtonText">Like</span>
    </button>
    <div class="like-count">
        <span id="likeCount">0</span> likes
    </div>
    <div class="like-status" id="likeStatus">Loading...</div>
</div>

<div class="comments-section">
    <h2 class="comments-header">Comments</h2>

    <div class="comment-form">
        <textarea
                id="commentContent"
                placeholder="Share your thoughts about this post..."
                maxlength="500"
        ></textarea>
        <button type="button" class="comment-submit-btn" onclick="submitComment()">
            Post Comment
        </button>
    </div>

    <!-- Messages -->
    <div id="message"></div>

    <!-- Comments List -->
    <div class="comments-list">
        <div id="comments-container">
            <div class="loading">Loading comments...</div>
        </div>
    </div>
</div>

<script>
    const postId = '<%= post._id %>';
    let isLiked = false;
    let likeCount = 0;

    // Load comments and like status when page loads
    document.addEventListener('DOMContentLoaded', function() {
        loadComments();
        loadLikeStatus();
    });

    function showMessage(text, type = 'error') {
        const messageDiv = document.getElementById('message');
        messageDiv.innerHTML = `<div class="${type}">${text}</div>`;

        // Clear message after 3 seconds
        setTimeout(() => {
            messageDiv.innerHTML = '';
        }, 3000);
    }

    // Load like status
    async function loadLikeStatus() {
        try {
            const response = await fetch(`/${postId}/status`, {
                credentials: 'include'
            });
            const data = await response.json();

            if (data.success) {
                isLiked = data.isLiked;
                likeCount = data.likesCount;
                updateLikeButton();
                updateLikeStatus();
            } else {
                document.getElementById('likeStatus').textContent = 'Unable to load like status';
            }
        } catch (error) {
            console.error('Error loading like status:', error);
            document.getElementById('likeStatus').textContent = 'Error loading likes';
        }
    }

    // Toggle like
    async function toggleLike() {
        const likeButton = document.getElementById('likeButton');

        // Disable button during request
        likeButton.disabled = true;

        try {
            const response = await fetch(`/${postId}/like`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                credentials: 'include'
            });

            const data = await response.json();

            if (data.success) {
                isLiked = data.isLiked;
                likeCount = data.likeCount;
                updateLikeButton();
                updateLikeStatus();

                // Show success message briefly
                showMessage(data.message, 'success');
            } else {
                showMessage(data.message || 'Failed to update like. Please try again.', 'error');
            }
        } catch (error) {
            console.error('Error toggling like:', error);
            showMessage('Please log in to like this post.', 'error');
        } finally {
            likeButton.disabled = false;
        }
    }

    // Update like button appearance
    function updateLikeButton() {
        const likeButton = document.getElementById('likeButton');
        const likeButtonText = document.getElementById('likeButtonText');
        const likeCountElement = document.getElementById('likeCount');

        if (isLiked) {
            likeButton.classList.add('liked');
            likeButtonText.textContent = 'Liked';
        } else {
            likeButton.classList.remove('liked');
            likeButtonText.textContent = 'Like';
        }

        likeCountElement.textContent = likeCount;
    }

    // Update like status text
    function updateLikeStatus() {
        const likeStatusElement = document.getElementById('likeStatus');
        if (isLiked) {
            likeStatusElement.textContent = 'You liked this post';
        } else {
            likeStatusElement.textContent = 'Click to show your appreciation';
        }
    }

    async function loadComments() {
        try {
            const response = await fetch(`/api/v1/comment/${postId}/comments`);
            const data = await response.json();

            const commentsContainer = document.getElementById('comments-container');

            if (data.success && data.comments.length > 0) {
                commentsContainer.innerHTML = data.comments.map(comment => `
                    <div class="comment">
                        <div class="comment-author">${comment.author?.fullName || 'Anonymous'}</div>
                        <div class="comment-date">${new Date(comment.createdAt).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                    hour: '2-digit',
                    minute: '2-digit'
                })}</div>
                        <div class="comment-content">${escapeHtml(comment.content)}</div>
                    </div>
                `).join('');
            } else {
                commentsContainer.innerHTML = '<div class="no-comments">No comments yet. Be the first to share your thoughts!</div>';
            }
        } catch (error) {
            console.error('Error loading comments:', error);
            document.getElementById('comments-container').innerHTML =
                '<div class="error">Failed to load comments. Please try again later.</div>';
        }
    }

    async function submitComment() {
        const content = document.getElementById('commentContent').value.trim();
        const submitBtn = document.querySelector('.comment-submit-btn');

        if (!content) {
            showMessage('Please enter a comment before submitting.', 'error');
            return;
        }

        // Disable button and show loading state
        submitBtn.disabled = true;
        submitBtn.textContent = 'Posting...';

        try {
            const response = await fetch(`/api/v1/comment/${postId}/comments/add`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ content }),
                credentials: 'include'
            });

            const data = await response.json();

            if (data.success) {
                showMessage('Comment posted successfully!', 'success');
                document.getElementById('commentContent').value = '';
                loadComments();
            } else {
                showMessage(data.message || 'Failed to post comment. Please try again.', 'error');
            }
        } catch (error) {
            console.error('Error posting comment:', error);
            showMessage('Failed to post comment. Please check your connection and try again.', 'error');
        } finally {
            submitBtn.disabled = false;
            submitBtn.textContent = 'Post Comment';
        }
    }

    // Helper function to escape HTML to prevent XSS
    function escapeHtml(text) {
        const map = {
            '&': '&amp;',
            '<': '&lt;',
            '>': '&gt;',
            '"': '&quot;',
            "'": '&#039;'
        };
        return text.replace(/[&<>"']/g, function(m) { return map[m]; });
    }

    // Allow submitting comment with Ctrl+Enter
    document.getElementById('commentContent').addEventListener('keydown', function(e) {
        if (e.ctrlKey && e.key === 'Enter') {
            submitComment();
        }
    });
</script>
</body>
</html>